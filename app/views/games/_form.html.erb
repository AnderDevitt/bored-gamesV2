    <%= form.label :condition %><br>
    <%= form.select :condition, Game.conditions.keys %>
  </div>

  <div class="field">
    <%= form.label :minimum_players %><br>
    <%= form.number_field :minimum_players %>
  </div>

  <div class="field">
    <%= form.label :maximum_players %><br>
    <%= form.number_field :maximum_players %>
  </div>

  <div class="field">
    <%= form.label :price %><br>
    <%= form.text_field :price %>
  </div>


  <div class="field">
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </div>

