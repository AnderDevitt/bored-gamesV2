
<h1>Games</h1>

<div class="row row-cols-1 row-cols-md-4 g-4">
  <% @games.each do |game| %>
    <div class="col">
      
        <div class="card" style="width: 18rem;">
          <div class="card-img-top" alt="Game main image">
            <% if game.picture.attached? %>
              <%= image_tag game.picture %>
            <% end %>
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= game.name %></h5>
            <p class="card-text">
              <strong>Genre:</strong>
              <%= game.genre %>
            </p>
            <p class="card-text">
              <strong>Price:</strong>
              $<%= game.price %>
            </p>
            <p><%= link_to 'Show', game %></p>
          </div>
          
      </div>
    </div>  
  <% end %>
</div>



