

<p>
  <strong>Name:</strong>
  <%= @game.name %>
</p>

<%= image_tag @game.picture if @game.picture.attached? %>

<p>
  <strong>Price:</strong>
  <%= @game.price %>
</p>

<%= link_to "Buy it now", new_game_purchase_path(@game.id) %>
<p>
  <strong>Condition:</strong>
  <%= @game.condition %>
</p>

<p>
  <strong>Min player:</strong>
  <%= @game.minimum_players %>
</p>

<p>
  <strong>Max player:</strong>
  <%= @game.maximum_players %>
</p>



<p>
  <strong>Description:</strong>
  <%= @game.description %>
</p>

<p>
  <strong>Seller:</strong>
  <%= @game.user.username %>
</p>

<% if user_signed_in? and (current_user.admin? or current_user.id == @game.user_id) %> 
    <%= link_to 'Edit', edit_game_path %>
    <%= link_to 'Destroy', @game, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
<%= link_to 'Back', games_path %>
